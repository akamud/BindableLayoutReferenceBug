<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BindableLayoutReferenceBug.MessageListViewTemplate" x:Name="listView">
    <ListView ItemsSource="{Binding Options}">
        <ListView.ItemTemplate>
            <DataTemplate>
                <StackLayout>
                    <Label Text="{Binding .}" />
                    <Button BackgroundColor="Blue" Text="Show Message" Command="{Binding Source={x:Reference Name=listView}, Path=Parent.BindingContext.ShowMessageCommand}" CommandParameter="{Binding .}" />
                </StackLayout>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentView>